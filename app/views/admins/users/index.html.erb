<div class="container">
  <h1 class="mb-4" style="text-align: center;">Users</h1>
  
  <%= link_to 'New User', new_admins_user_path, class: "btn btn-primary mb-3" %>

  <div class="table-responsive" style="text-align: center;">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.order(id: :asc).each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Show', admins_user_path(user), class: "btn btn-info btn-sm me-2" %>
              <%= link_to 'Delete', admins_user_path(user), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", title: "Delete User" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "Back to Admin Dashboard", admins_page_path, class: "btn btn-secondary" %>
</div>
