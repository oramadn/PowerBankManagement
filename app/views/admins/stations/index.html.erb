<h1>Stations</h1>
<%= link_to 'New Station', new_admins_station_path %>
<table class="table table-bordered"> <!-- Add a Bootstrap table class for basic styling -->
  <thead>
    <tr>
      <th>Status</th>
      <th>Location</th>
      <th>Warehouse</th>
      <th>Assigned Power Banks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.status %></td>
        <% if station.location %>
          <td><%= station.location.name %></td>
        <% else %>
          <td>Location not found</td>
        <% end %>
        <% if station.warehouse %>
          <td><%= station.warehouse.name %></td>
        <% else %>
          <td>Warehouse not found</td>
        <% end %>
        <td style="text-align: center;"> <!-- Center align content in this cell -->
          <% if station.power_banks.any? %>
            <ul style="list-style-type: none; padding: 0; margin: 0; text-align: center;"> <!-- Remove bullet points and center text within the cell -->
              <% station.power_banks.each do |power_bank| %>
                <li style="display: block; margin-bottom: 5px;"> <!-- Display list items as blocks and add margin between them -->
                  <%= "Power Bank #{power_bank.id}" %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <span>None</span>
          <% end %>
        </td>
        <td><%= link_to 'Show', admins_station_path(station) %></td>
        <td><%= link_to 'Edit', edit_admins_station_path(station) %></td>
        <td><%= link_to 'Destroy', admins_station_path(station), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Back to Admin Dashboard", admins_page_path, class: "btn btn-secondary" %>
