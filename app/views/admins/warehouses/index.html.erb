<h1>Warehouses</h1>

<p><%= link_to "New Warehouse", new_admins_warehouse_path, class: "btn btn-primary" %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.address %></td>
        <td><%= link_to "Show", admins_warehouse_path(warehouse), class: "btn btn-info" %></td>
        <td><%= link_to "Edit", edit_admins_warehouse_path(warehouse), class: "btn btn-warning" %></td>
        <td><%= link_to "Delete", admins_warehouse_path(warehouse), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Back to Admin Dashboard", admins_page_path, class: "btn btn-secondary" %>

